@{
    ViewData["Title"] = "Đăng ký";
}

<div class="container mt-5">
    <h2 class="text-center">Đăng ký</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }
    <form method="post" asp-controller="Account" asp-action="SignUp">
        <div class="form-group">
            <label>Họ và Tên:</label>
            <input type="text" class="form-control" name="fullName" required>
        </div>
        <div class="form-group">
            <label>Email:</label>
            <input type="email" class="form-control" name="email" required>
        </div>
        <div class="form-group">
            <label>Mật khẩu:</label>
            <input type="password" class="form-control" name="password" required>
        </div>
        <div class="form-group">
            <label>Xác nhận mật khẩu:</label>
            <input type="password" class="form-control" name="confirmPassword" required>
        </div>
        <button type="submit" class="btn btn-success mt-3">Đăng ký</button>
    </form>
    <p class="mt-3">Đã có tài khoản? <a asp-controller="Account" asp-action="Login">Đăng nhập</a></p>
</div>
