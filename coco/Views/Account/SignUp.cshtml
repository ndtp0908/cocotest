@{
    ViewData["Title"] = "Đăng ký thành viên";
}

<div class="container mt-5">
    <h2 class="text-center">Đăng ký</h2>
    @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">@ViewBag.Error</div>
    }

    <form method="post" asp-controller="Account" asp-action="SignUp">
        <div class="row">
            <!-- Cột bên trái -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Họ và Tên:</label>
                    <input type="text" class="form-control" name="fullName" required value="@ViewBag.FullName">
                </div>
                <div class="form-group">
                    <label>Email:</label>
                    <input type="email" class="form-control" name="email" required value="@ViewBag.Email">
                </div>
                <div class="form-group">
                    <label>Số điện thoại:</label>
                    <input type="number" class="form-control" name="phone" required value="@ViewBag.Phone">
                </div>
                <div class="form-group">
                    <label>Địa chỉ:</label>
                    <input type="text" class="form-control" name="address" required value="@ViewBag.Address">
                </div>
                <div class="form-group">
                    <label>Ngày sinh:</label>
                    <input type="date" class="form-control" name="birthday" required value="@ViewBag.Birthday">
                </div>
                <div class="form-group">
                    <label>Giới tính:</label>
                    <select class="form-control" name="gender" required>
                        <option value="Nam" selected="@(ViewBag.Gender == "Nam")">Nam</option>
                        <option value="Nữ" selected="@(ViewBag.Gender == "Nữ")">Nữ</option>
                    </select>
                </div>
            </div>

            <!-- Cột bên phải -->
            <div class="col-md-6">
                <div class="form-group">
                    <label>Tài khoản:</label>
                    <input type="text" class="form-control" name="userName" required value="@ViewBag.UserName">
                </div>
                <div class="form-group">
                    <label>Mật khẩu:</label>
                    <input type="password" class="form-control" name="password" required>
                </div>
                <div class="form-group">
                    <label>Xác nhận mật khẩu:</label>
                    <input type="password" class="form-control" name="confirmPassword" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-success mt-3">Đăng ký</button>
                </div>
            </div>
        </div>    
    </form>

    <p class="mt-3 text-center">
        Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="ms-2">Đăng nhập</a>
    </p>
</div>
