@{
    ViewData["Title"] = "Đăng ký thành viên";
}

<div class="container d-flex align-items-center justify-content-center">
    <div class="card p-4 shadow-lg mt-4" style="max-width: 600px; width: 100%; border-radius: 12px;">
        <h2 class="text-center mb-3">Đăng ký</h2>

        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Error</div>
        }

        <form method="post" asp-controller="Account" asp-action="SignUp">
            <div class="row">
                <!-- Cột bên trái -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label>Họ và Tên:</label>
                        <input type="text" class="form-control rounded-pill" name="fullName" required value="@ViewBag.FullName">
                    </div>
                    <div class="form-group mb-3">
                        <label>Email:</label>
                        <input type="email" class="form-control rounded-pill" name="email" required value="@ViewBag.Email">
                    </div>
                    <div class="form-group mb-3">
                        <label>Số điện thoại:</label>
                        <input type="number" class="form-control rounded-pill" name="phone" required value="@ViewBag.Phone">
                    </div>
                    <div class="form-group mb-3">
                        <label>Địa chỉ:</label>
                        <input type="text" class="form-control rounded-pill" name="address" required value="@ViewBag.Address">
                    </div>
                </div>

                <!-- Cột bên phải -->
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label>Ngày sinh:</label>
                        <input type="date" class="form-control rounded-pill" name="birthday" required value="@ViewBag.Birthday">
                    </div>
                    <div class="form-group mb-3">
                        <label>Giới tính:</label>
                        <select class="form-control rounded-pill" name="gender" required>
                            <option value="Nam" selected="@(ViewBag.Gender == "Nam")">Nam</option>
                            <option value="Nữ" selected="@(ViewBag.Gender == "Nữ")">Nữ</option>
                        </select>
                    </div>
                    <div class="form-group mb-3">
                        <label>Tài khoản:</label>
                        <input type="text" class="form-control rounded-pill" name="userName" required value="@ViewBag.UserName">
                    </div>
                    <div class="form-group mb-3">
                        <label>Mật khẩu:</label>
                        <input type="password" class="form-control rounded-pill" name="password" required>
                    </div>
                    <div class="form-group mb-3">
                        <label>Xác nhận mật khẩu:</label>
                        <input type="password" class="form-control rounded-pill" name="confirmPassword" required>
                    </div>
                </div>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-success w-100 rounded-pill mt-2">Đăng ký</button>
            </div>
        </form>

        <p class="mt-3 text-center">
            Đã có tài khoản? <a asp-controller="Account" asp-action="Login" class="fw-bold text-decoration-none mt-2">Đăng nhập</a>
        </p>
    </div>
</div>
